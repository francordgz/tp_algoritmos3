<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.?>
<?import javafx.scene.image.?>
<?import javafx.scene.layout.?>
<?import javafx.scene.text.?>
<?import javafx.scene.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="your.controller.ClassController"
            prefHeight="600.0" prefWidth="800.0">

    <top>
        <VBox alignment="CENTER" spacing="10.0">
            <Label text="Opponent Pokémon Name" />
            <ImageView fitHeight="100.0" fitWidth="100.0">
                <image>
                    <Image url="@path/to/opponentPokemonImage.png" />
                </image>
            </ImageView>
        </VBox>
    </top>

    <center>
        <GridPane hgap="20.0" vgap="10.0" alignment="CENTER">
            <!-- Player's Pokémon -->
            <ImageView GridPane.columnIndex="0">
                <image>
                    <Image url="@path/to/playerPokemonImage.png" />
                </image>
            </ImageView>
            <!-- Health Bars and Other Elements -->
            <!-- Adjust column indices and add more components as needed -->
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20.0">
            <Button text="Attack" />
            <Button text="Defend" />
            <Button text="Switch" />
            <!-- Add more buttons as needed -->
        </HBox>
    </bottom>
</BorderPane>
