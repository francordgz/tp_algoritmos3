<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Button prefHeight="55.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.main.Controlador.Nodos.PokemonButtonController">
   <graphic>
      <HBox>
         <children>
            <ImageView fx:id="pokemonImage" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
            <Pane prefHeight="51.0" prefWidth="16.0" />
            <VBox prefHeight="51.0" prefWidth="130.0">
               <children>
                  <Label fx:id="nombreLabel" prefHeight="17.0" prefWidth="109.0" text="Nombre" />
                  <Label fx:id="nivelLabel" prefHeight="17.0" prefWidth="110.0" text="Nivel" />
                  <Label fx:id="estadosLabel" layoutX="10.0" layoutY="27.0" prefHeight="17.0" prefWidth="130.0" text="Estados" />
               </children>
            </VBox>
            <VBox layoutX="85.0" layoutY="10.0">
               <children>
                  <HBox>
                     <children>
                        <Label alignment="CENTER" prefHeight="18.0" text="PS" />
                        <ProgressBar fx:id="progressBar" progress="100" />
                     </children>
                  </HBox>
                  <Label fx:id="hpLabel" alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="114.0" text="HP" textAlignment="RIGHT" />
               </children>
            </VBox>
         </children>
      </HBox>
   </graphic>
</Button>
